<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewObservations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcg1transparent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textSize="24sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/ambianteTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ambiante"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/solTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sol"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HumiditÃ©"
            android:textSize="24sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/ambianteHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ambiante"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/solHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sol"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observations"
            android:textSize="24sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/observations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter observations here"
            android:inputType="textMultiLine"
            android:lines="4"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>